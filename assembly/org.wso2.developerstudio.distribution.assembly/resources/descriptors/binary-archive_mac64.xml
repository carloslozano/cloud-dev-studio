<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>${artifactId}</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!--copying the cef resources into the zip file on zip creation -->
        <fileSet>
            <directory>${project.basedir}/target/cef-binaries/${cef.binary.version}/mac-64</directory>
            <outputDirectory>/wso2-developer-studio-mac64</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
       <fileSet>
           <directory>${project.basedir}/../org.wso2.developerstudio.ide.assembly/target/${com.codenvy.sdk.version}/webapps</directory>
           <outputDirectory>/wso2-developer-studio-mac64/${assembly.tomcat.webapp.root}</outputDirectory>
           <excludes>
               <exclude>*.war</exclude>
           </excludes>
           <useDefaultExcludes>true</useDefaultExcludes>
           <fileMode>0777</fileMode>
           <directoryMode>0777</directoryMode>
       </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${bin.location}</directory>
            <outputDirectory>/wso2-developer-studio-mac64/${bin.location}</outputDirectory>
            <includes>
                <include>wso2studio_mac_server.sh</include>
                <include>wso2studio_mac_workspace.sh</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${lib.location}</directory>
            <outputDirectory>/wso2-developer-studio-mac64/${lib.location}</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <excludes>
                <exclude>org.eclipse.swt.gtk.linux.x86_64-4.4.jar</exclude>
                <exclude>org.eclipse.swt.win32.win32.x86_64.jar</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${conf.location}</directory>
            <outputDirectory>/wso2-developer-studio-mac64/${conf.location}</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0666</fileMode>
            <directoryMode>0666</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${icons.location}</directory>
            <outputDirectory>/wso2-developer-studio-mac64/${icons.location}</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${temp.location}</directory>
            <outputDirectory>/wso2-developer-studio-mac64/${temp.location}</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0666</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${logs.location}</directory>
            <outputDirectory>/wso2-developer-studio-mac64/${logs.location}</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0666</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
</assembly>

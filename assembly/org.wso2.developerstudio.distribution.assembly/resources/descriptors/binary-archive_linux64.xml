<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>${artifactId}</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.ide.assembly/target/${com.codenvy.sdk.version}</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}</outputDirectory>
            <excludes>
                <exclude>webapps/api.war</exclude>
                <exclude>webapps/ws.war</exclude>
                <exclude>webapps/datasource.war</exclude>
                <exclude>webapps/java-ca.war</exclude>
                <exclude>webapps/api-docs-ui.war</exclude>
                <exclude>bin/che.bat</exclude>
                <exclude>bin/configtest.bat</exclude>
                <exclude>bin/daemon.bat</exclude>
                <exclude>bin/digest.bat</exclude>
                <exclude>bin/setclasspath.bat</exclude>
                <exclude>bin/setenv.bat</exclude>
                <exclude>bin/shutdown.bat</exclude>
                <exclude>bin/startup.bat</exclude>
                <exclude>bin/version.bat</exclude>
                <exclude>bin/tool-wrapper.bat</exclude>
                <exclude>bin/cpappend.bat</exclude>
            </excludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <!--copying the cef resources into the zip file on zip creation -->
        <fileSet>
            <directory>${project.basedir}/target/cef-binaries/${cef.binary.version}/linux-64/Release</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${bin.location}</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${bin.location}</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${bin.location}</outputDirectory>
            <includes>
                <include>workspace.sh</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/install_scripts/Linux</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${bin.location}</outputDirectory>
            <includes>
                <include>install.sh</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${lib.location}</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${lib.location}</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <excludes>
                <exclude>org.eclipse.swt.cocoa.macosx.x86_64-4.4.jar</exclude>
                <exclude>org.eclipse.swt.win32.win32.x86_64-4.4.jar</exclude>
                <exclude>ecj-4.2.1.jar</exclude>
                <exclude>slf4j-log4j12-1.7.7.jar</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${conf.location}</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${conf.location}</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0666</fileMode>
            <directoryMode>0666</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${icons.location}</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${icons.location}</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0777</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${temp.location}</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${temp.location}</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0666</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../org.wso2.developerstudio.cef.assembly/target/${assembler.dir.name}/${logs.location}</directory>
            <outputDirectory>/wso2-developer-studio-linux64-${developerstudio.release}/${logs.location}</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <fileMode>0666</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
    </fileSets>
</assembly>
